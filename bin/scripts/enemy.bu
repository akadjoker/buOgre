
class Enemy : ScriptComponent
{
    var hp = 100;

    def start()
    {
        self.x = 50.0;
        self.y = 50.0;

        write("Enemy.start() - pos: ({}, {}) hp: {}\n", self.x, self.y, self.hp);
    }

    def update(dt)
    {
        self.x = self.x - 30.0 * dt;
        write("Enemy.update(dt={}) - pos: ({}, {}) hp: {}\n", dt, self.x, self.y, self.hp);
    }

    def render()
    {
        write("Enemy.render() at ({}, {})\n", self.x, self.y);
    }
}
